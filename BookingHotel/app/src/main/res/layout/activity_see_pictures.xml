<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeePictures">

    <ImageView
        android:id="@+id/_85"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_80dp"
        android:background="@color/FF0B2B30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--TIÊU ĐỀ (POLICIES) TRÊN HÌNH BANNER BO TRÒN XANH (ImageRadius)-->
    <TextView
        android:id="@+id/_86"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/encodesanssemicondensedmedium"
        android:text="See pictures"
        android:textColor="@color/FFF9F9F9"
        android:textSize="@dimen/_text_24sp"
        app:layout_constraintBottom_toBottomOf="@+id/_85"
        app:layout_constraintEnd_toEndOf="@+id/_85"
        app:layout_constraintStart_toStartOf="@+id/_85"
        app:layout_constraintTop_toTopOf="@+id/_85" />

    <!--ICON BACK (QUAY LẠI) TRÊN NỀN HÌNH BANNER BO TRÒN XANH (ImageRadius)-->
    <ImageView
        android:id="@+id/_87"
        android:layout_width="@dimen/_15dp"
        android:layout_height="@dimen/_24dp"
        android:layout_marginBottom="@dimen/_4dp"
        app:layout_constraintBottom_toBottomOf="@+id/_86"
        app:layout_constraintEnd_toStartOf="@+id/_86"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="@+id/_85"
        app:srcCompat="@drawable/icon_back" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:layout_marginTop="@dimen/_80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/_111"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300dp"
                android:layout_marginTop="@dimen/_16dp"
                app:srcCompat="@drawable/hotelroom1" />

            <ImageView
                android:id="@+id/_112"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300dp"
                android:layout_marginTop="@dimen/_16dp"
                app:srcCompat="@drawable/hotelroom2" />

            <ImageView
                android:id="@+id/_113"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300dp"
                android:layout_marginTop="@dimen/_16dp"
                app:srcCompat="@drawable/hotelroom3" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>