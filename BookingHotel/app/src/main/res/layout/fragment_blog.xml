<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_main.BlogFragment">


    <EditText
        android:id="@+id/_193"
        android:layout_width="230dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/radius_white_left_all"
        android:drawableStart="@drawable/icon_search"
        android:drawablePadding="@dimen/_16dp"
        android:hint="Searching"
        android:paddingStart="@dimen/_24dp"
        android:paddingEnd="@dimen/_5dp"
        android:textColor="@color/FF444444"
        android:textSize="@dimen/_text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_20dp"
        android:text="Most prominent"
        android:textSize="@dimen/_text_24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_193" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvc_list_blog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_75"></androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/_210"
        android:layout_width="90dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/radius_blue_right_all"
        android:gravity="center"
        android:text="Search"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/_193"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>